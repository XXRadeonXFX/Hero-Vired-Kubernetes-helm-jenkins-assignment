pipeline {
  agent any

  environment {
    DOCKERHUB_CREDENTIALS = credentials('DOCKER-PRINCE-CRED')
    FRONTEND_IMAGE = "xxradeonxfx/learner-frontend:latest"
    BACKEND_IMAGE  = "xxradeonxfx/learner-backend:latest"
  }

  stages {
    stage('Clone Repo') {
      steps {
        git 'https://github.com/UnpredictablePrashant/learnerReportCS_backend'
        // for mono-repo, make sure both backend & frontend folders are present
      }
    }

    stage('Build Frontend Docker Image') {
      steps {
        dir('frontend') {
          sh 'docker build -t $FRONTEND_IMAGE .'
        }
      }
    }

    stage('Build Backend Docker Image') {
      steps {
        dir('backend') {
          sh 'docker build -t $BACKEND_IMAGE .'
        }
      }
    }

    stage('Push Docker Images') {
      steps {
        withCredentials([usernamePassword(credentialsId: 'dockerhub-creds', usernameVariable: 'USERNAME', passwordVariable: 'PASSWORD')]) {
          sh '''
            echo $PASSWORD | docker login -u $USERNAME --password-stdin
            docker push $FRONTEND_IMAGE
            docker push $BACKEND_IMAGE
          '''
        }
      }
    }

    stage('Deploy via Helm') {
      steps {
        dir('helm') {
          sh 'helm upgrade --install mern ./mern-chart --namespace default'
        }
      }
    }
  }

  post {
    success {
      echo '✅ Deployment Successful!'
    }
    failure {
      echo '❌ Build Failed!'
    }
  }
}
